<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” NirbhayNet"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#FF00FF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="8dp"
            android:animateLayoutChanges="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI-Powered Fraud Detection"
            android:textSize="18sp"
            android:textColor="#00FFFF"
            android:alpha="0.8"
            android:layout_marginBottom="24dp" />

        <!-- Input Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Behavioral Metrics"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:shadowColor="#00FFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_marginBottom="16dp" />

        <!-- Typing Speed Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CustomTextInputLayout"
            android:textColorHint="#80FFFFFF"
            app:boxStrokeColor="@color/text_input_border"
            app:boxBackgroundColor="@android:color/transparent">
            <EditText
                android:id="@+id/typing_speed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="âŒ¨ï¸ Typing Speed (chars/min)"
                android:inputType="numberDecimal"
                android:background="@drawable/neon_input_field"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Swipe Speed Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CustomTextInputLayout"
            android:textColorHint="#80FFFFFF"
            app:boxStrokeColor="@color/text_input_border"
            app:boxBackgroundColor="@android:color/transparent">
            <EditText
                android:id="@+id/swipe_speed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ‘† Swipe Speed (px/sec)"
                android:inputType="numberDecimal"
                android:background="@drawable/neon_input_field"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tap Pressure Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CustomTextInputLayout"
            android:textColorHint="#80FFFFFF"
            app:boxStrokeColor="@color/text_input_border"
            app:boxBackgroundColor="@android:color/transparent">
            <EditText
                android:id="@+id/tap_pressure_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“± Tap Pressure (0.0-1.0)"
                android:inputType="numberDecimal"
                android:background="@drawable/neon_input_field"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Device Angle Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/CustomTextInputLayout"
            android:textColorHint="#80FFFFFF"
            app:boxStrokeColor="@color/text_input_border"
            app:boxBackgroundColor="@android:color/transparent">
            <EditText
                android:id="@+id/device_angle_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“ Device Angle (degrees)"
                android:inputType="numberDecimal"
                android:background="@drawable/neon_input_field"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Predict Button -->
        <Button
            android:id="@+id/predict_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ ANALYZE BEHAVIOR"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/neon_button_background"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:stateListAnimator="@animator/button_state_animator" />

        <!-- Result Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Analysis Result"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready for analysis..."
            android:textSize="16sp"
            android:textColor="#00FFFF"
            android:shadowColor="#FF00FF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:background="@drawable/neon_result_background"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by TensorFlow Lite â€¢ Canara Bank Hackathon 2025"
            android:textSize="12sp"
            android:textColor="#80FFFFFF"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>